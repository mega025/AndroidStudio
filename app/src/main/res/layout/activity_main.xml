<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:text="Escribe aqui" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                            android:textSize="25dp"
                android:id="@+id/buttonBorrarTodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C" />

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonParentesis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="(    )" />

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonPorcentaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="%" />

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonBorrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="<-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonUno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1" />

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonDos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2" />

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonTres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3" />
            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonSuma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonCuatro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4" />

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonCinco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonSeis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6" />
            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonResta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonSiete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonOcoho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonNueve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9" />
            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonMultiplicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonMasMenos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+/-" />

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonCero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0" />

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonPunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="." />

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/buttonDividir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/" />


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="200dp">

            <Button
                android:backgroundTint="@color/azul2"
                android:textColor="@color/black"
                android:id="@+id/buttonCalcular"
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>